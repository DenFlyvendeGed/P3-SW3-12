@using P3_Project.Models.Orders
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model List<P3_Project.Models.Orders.OrderDBInfo>

<div>
    <table>
        <tr>
            <td>
                <label>Id</label>
            </td>   
            <td>
                <label>Navn</label>
            </td>
            <td>
                <label>Udløbsdato</label>
            </td>   
            <td>
                <label>Pris</label>
            </td>   
            <td>
                <label>Activ</label>
            </td>   
            <td>
                <label>Betalt</label>
            </td>   
        </tr>
        @{
            foreach(OrderDBInfo order in Model)
            {
                                <tr onclick="orderClick(@order.Id)" class="Clickable">
                                    <td>
                                        <label>@order.Id</label>
                                    </td>   
                                    <td>
                                        <label>@order.Name</label>
                                    </td>
                                    <td>
                                        <label>@order.ExpirationDate</label>
                                    </td>   
                                    <td>
                                        <label>@order.Price</label>
                                    </td>   
                                    <td>
                                        <label>@order.IsActive</label>
                                    </td>   
                                    <td>
                                        <label>@order.IsPaid</label>
                                    </td>   
                                </tr>

            };
            
        }

    </table>
    


</div>
<style>
    tr,td{
        border-width: 2px;
        border-color: black;
    }
    td{
        width: 10vw;
    }
</style>
<script>

    function orderClick(id)
    {
        window.location.href = "/Admin/ConfirmSale?Id=" + id;
    }
</script>

