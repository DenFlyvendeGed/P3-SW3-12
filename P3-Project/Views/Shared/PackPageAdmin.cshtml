<script>

    function DeletePackModel(ID) {
        let RequestBody = {
            Id: ID
        };
        let Request = JSON.stringify(RequestBody);

        fetch("/api/admin/DeletePackModel", {
            method: "DELETE",
            body: Request
        })
            .then(response => {
                if (response.redirected) {
                    window.location.href = response.url;
                }
            });
    }
</script>


<div class="packBox Clickable" onclick="PackModelEdit(@Model.PackID)">
    <img class="packBox-img" src="@(ImageModel.GetFirstImg(Model.PackID, "PackModel")?.FilePath != "" ? Html.Raw(ImageModel.GetFirstImg(Model.PackID, "PackModel").FilePath) : Html.Raw("../favicon.ico"))" alt="HTML5 Icon">
    <div class="packBox-bar">
        @Model.Name
    </div>
</div>
<div class="Box-Minus Clickable" style="position: relative; top: 270px; right: 126px; width: 120px; height: 30px; text-align:center; padding: 4px 0;" onclick="DeletePackModel(@Model.PackID)">Slet Pakke</div>

